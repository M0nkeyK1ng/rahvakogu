.col-group
  .col-2
    .col-content
      = render :partial => "users/profile_pic"
      = render :partial => "users/profile_nav"
  .col-10
    .col-content
      - @followings.in_groups_of(4) do |row_followings|
        - for following in row_followings
          - if following
            = render :partial => "users/pic_48", :locals => {:user => following.other_user}
            = link_to following.other_user.real_name, following.other_user
            .small= time_ago(following.created_at)
