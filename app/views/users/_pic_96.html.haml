.border_miss_avatar96{:style=>"height: 96px;width=96px"}
  - if user.has_picture?
    = image_tag user.buddy_icon.url(:icon_96), :size => "96x96", :width=>"96", :border => 0, :alt => ""
  - elsif user.facebook_id
    = fb_profile_pic user,:facebook_logo=>false, :linked=>false, :size=>"square", :height=>"96",:width=>"96"
  - else
    = image_tag current_instance.buddy_icon.url(:icon_96), :size => "96x96", :border => 0, :alt => ""
