- if idea.replaced?
  #hp_intro
    %strike= tg(idea.name)
- else
  #hp_intro.ideas
    = link_to_unless_current tg(idea.name), idea
    %span.box.smallbox= "#{idea.cached_allocated_points_counter} #{tr('Points', 'views/ideas/_name')}"
    = render :partial=>"ideas/report_content", :locals=>{:idea=>idea}
= render :partial=>"ideas/flagged", :locals=>{:idea=>idea}
