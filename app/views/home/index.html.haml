  - if @bottom_ideas.empty?
    No ideas yet.
  - else
    .cycle
      - @bottom_ideas.each do |bi|
        .item
          = link_to bi do
            %h2= "“#{bi.name}”"
            .label
              %span.left Ettepanek
              %span.right
                = bi.author_sentence
                = ","
                %span.gray= l bi.published_at.to_date, :format => :long

