%p
  .authors_heading= tr('Authors', 'view/documents/_authors')
  - for user in users
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :class => "authors_table"}
      %tr
        %td{:valign => "top", :width => "24"}
          = render :partial => "users/pic", :locals => {:user => user}
        %td{:style => "padding-left: 5px;", :valign => "top"}
          - if user.status == 'suspended' or user.status == 'removed'
            <strike>
          = link_to user.name, user
          %span.pc= tr("{capital}{currency_short_name}", "view/documents/_authors", :capital => user.capitals_count, :currency_short_name => current_instance.currency_short_name)
          - if user.status == 'suspended' or user.status == 'removed'
            </strike>
          .profile_small= tr("{count} revisions", "view/documents/_authors", :count => user)
